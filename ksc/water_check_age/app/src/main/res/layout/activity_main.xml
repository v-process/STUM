<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="나의 물 권장량 알아보기"

        />

    <TextView android:text="몸무게 : "
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/title1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/weight_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="몸무게를 입력하세요"
        android:singleLine="true"
        android:inputType="number"
        android:maxLength="3"
        android:layout_alignBaseline="@+id/weight"
        android:layout_alignBottom="@+id/weight"
        android:layout_toRightOf="@+id/weight"
        android:layout_toEndOf="@+id/weight" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력"
        android:layout_alignBottom="@+id/water_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스포츠"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/weight_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        />

    <CheckBox
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더운 날"
        android:layout_below="@+id/sports"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    />

    <TextView
        android:id="@+id/water_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하루 물 권장량"
        android:textSize="25dp"
        android:layout="@+id/weight"
        android:layout_marginTop="127dp"
        android:layout_below="@+id/weather"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
