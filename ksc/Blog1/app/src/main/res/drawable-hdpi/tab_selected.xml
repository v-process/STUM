<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom Shadow -->
    <item
        android:left="0dp"
        android:right="0dp">

        <shape android:shape="rectangle">
            <padding
                android:top="0dp"
                android:right="0dp"
                android:bottom="4dp"
                android:left="0dp" />
            <solid android:color="#FF00FF" />
        </shape>
    </item>

    <!-- White Top color -->
	<item>
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>