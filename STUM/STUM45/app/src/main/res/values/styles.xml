<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="Theme.AppCompat">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <!--sandkdnsakndsksndakalsdndlkadsnklads-->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->

    <style name="AppTheme.ConnectionInfoContainer">
        <item name="android:background">@color/gray3</item>
    </style>
    <style name="AppTheme.ConnectionInfoText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/graye</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat">
        <item name="colorAccent">@color/myBlue</item>
        <item name="colorControlHighlight">@color/myBlue</item>
        <item name="colorControlNormal">@color/myBlue</item>
    </style>

</resources>
