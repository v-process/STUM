<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3852A4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/temp_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="110dp"
            android:layout_centerHorizontal = "true"/>

        <ImageView
            android:id="@+id/water_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="130dp"
            android:layout_marginLeft="130dp"
            android:layout_centerHorizontal = "true"
            android:layout_marginBottom="120dp"
            />

        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text = " / "
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/drink_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="마신물"
            android:layout_alignTop="@+id/slash"
            android:layout_toLeftOf="@+id/slash"
            android:layout_toStartOf="@+id/slash" />

        <TextView
            android:id="@+id/drink_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표"
            android:textSize="25dp"
            android:layout_alignTop="@+id/slash"
            android:layout_toRightOf="@+id/slash"
            android:layout_toEndOf="@+id/slash" />

        <TextView
            android:id="@+id/ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ml"
            android:textSize="25dp"
            android:layout_alignTop="@+id/drink_view2"
            android:layout_toRightOf="@+id/drink_view2"
            android:layout_toEndOf="@+id/drink_view2" />

    </RelativeLayout>

    <Button
        android:id="@+id/refresh_btn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:onClick="refresh"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/clickbtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="통지"
        android:id="@+id/notification_btn"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/temperature_btn"
        android:id="@+id/tempbtn" />

    <TextView
        android:id="@+id/temp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="온도"
        android:layout_marginLeft="190dp"
        android:textColor="#ACA7D2"
        android:layout_alignBottom="@+id/tempbtn"
        android:layout_marginBottom="23dp"
        />

</RelativeLayout>